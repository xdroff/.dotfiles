# Get IP from hostname

h2ip() {
  ping -c 1 "$1" | egrep -m1 -o '[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}'
}

# Get ip info

#ipinfo() {
#  curl -s ipinfo.io/"$1" && echo
#}

ipinfo() {
  if [ -z "$1" ]; then
    curl ipinfo.io
    echo ""
  else
    if [[ "$1" =~ ^([0-9]{1,3}\.){3}[0-9]{1,3}$ ]] || [[ "$1" =~ ^([0-9a-fA-F]{0,4}:){2,7}[0-9a-fA-F]{0,4}$ ]]; then
      curl ipinfo.io/"$1"
      echo ""
    else
      local ip=$(dig +short "$1" | head -n 1)
      if [ -z "$ip" ]; then
        echo "Не удалось разрешить домен: $1"
        return 1
      fi
      echo "Информация для домена $1 ($ip):"
      curl ipinfo.io/"$ip"
      echo ""
    fi
  fi
}

# Upload file to transfer.sh
# https://transfer.sh
# https://github.com/dutchcoders/transfer.sh/

#transfer() {
#  tmpfile=$( mktemp -t transferXXX )
#  curl --progress-bar --upload-file "$1" https://transfer.sh/$(basename $1) >> $tmpfile;
#  cat $tmpfile;
#  rm -f $tmpfile;
#}

transfer() {
  if [[ -f "$1" ]]; then
    tmpfile=$( mktemp -t transferXXX )
    curl --progress-bar --upload-file "$1" https://transfer.sh/$(basename $1) >> $tmpfile
    cat $tmpfile
    rm -f $tmpfile
  elif [[ -d "$1" ]]; then
    echo "This is the directory, add it to the archive"
    tar czf ${1%/}.tar.gz "${1%/}"
    tmpfile=$( mktemp -t transferXXX )
    curl --progress-bar --upload-file ${1%/}.tar.gz https://transfer.sh/$(basename ${1%/}.tar.gz) >> $tmpfile
    cat $tmpfile
    rm -f $tmpfile
    rm -r ${1%/}.tar.gz
  fi
}

# Find real from shortened url

unshorten() {
  curl -sIL $1 | sed -n 's/Location: *//p'
}

# Shows listening connections on the port

lport() {
  re='^[0-9]+$'
  if ! [[ $1 =~ $re ]] ; then
    echo "The port must be a number"
  else
    sudo lsof -i :$1
  fi
}
